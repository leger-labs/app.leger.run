{
  "id": "whisper-local",
  "name": "Whisper (Local)",
  "category": "speech-to-text",
  "requires_api_key": false,
  "logo": "@/assets/icons/openai.svg",
  "openwebui_variables": [
    {
      "name": "AUDIO_STT_ENGINE",
      "type": "str",
      "default": null,
      "description": "Specifies the Speech-to-Text engine to use.",
      "options": [
        "openai",
        "deepgram",
        "azure"
      ]
    },
    {
      "name": "WHISPER_LANGUAGE",
      "type": "str",
      "default": "",
      "description": "Whisper language code",
      "options": []
    },
    {
      "name": "WHISPER_MODEL",
      "type": "str",
      "default": "base",
      "description": "Whisper model to use",
      "options": [
        "tiny",
        "base",
        "small",
        "medium",
        "large"
      ]
    },
    {
      "name": "WHISPER_MODEL_AUTO_UPDATE",
      "type": "bool",
      "default": false,
      "description": "Toggles automatic update of the Whisper model.",
      "options": []
    },
    {
      "name": "WHISPER_MODEL_DIR",
      "type": "str",
      "default": "${DATA_DIR}/cache/whisper/models",
      "description": "Specifies the directory to store Whisper model files.",
      "options": []
    },
    {
      "name": "WHISPER_VAD_FILTER",
      "type": "bool",
      "default": false,
      "description": "Specifies whether to apply a Voice Activity Detection (VAD) filter to Whisper Speech-to-Text.",
      "options": []
    },
    {
      "name": "WHISPER_BEAM_SIZE",
      "type": "int",
      "default": 5,
      "description": "Whisper beam size",
      "options": []
    },
    {
      "name": "WHISPER_COMPUTE_TYPE",
      "type": "str",
      "default": "int8",
      "description": "Whisper compute type",
      "options": [
        "int8",
        "float16",
        "float32"
      ]
    },
    {
      "name": "WHISPER_DEVICE",
      "type": "str",
      "default": "auto",
      "description": "Whisper device",
      "options": [
        "auto",
        "cpu",
        "cuda"
      ]
    },
    {
      "name": "WHISPER_CACHE_DIR",
      "type": "str",
      "default": "/var/lib/whisper/cache",
      "description": "Whisper cache directory",
      "options": []
    }
  ]
}
